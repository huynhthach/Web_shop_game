@model tudong.Models.MUAGAME


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Giỏ hàng của bạn</h2>

@using (Html.BeginForm("Create", "MUAGAMEs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
<p>
    role @ViewBag.role ;
    name @ViewBag.name ;
    nd @ViewBag.idtk;
    id @ViewBag.idmua;
</p>
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.idMua, new { Value = ViewBag.idmua })
    @Html.HiddenFor(model => model.idND, new { Value = ViewBag.idtk })
    @Html.HiddenFor(model => model.trangThai, new { Value = "0" })
    @Html.HiddenFor(model => model.ngayMua, new { Value = DateTime.Now })


    
    @Html.Action("Index", "CHITIET_MUAGAME")


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thanh toán" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
