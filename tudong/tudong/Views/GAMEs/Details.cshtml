@model tudong.Models.GAME

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <style>
        .container {
            
        
        }
    </style>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>Lugx Gaming - Product Detail</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-lugx-gaming.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <link rel="stylesheet" href="~/assets/css/animate.css">
    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
    <!--

    TemplateMo 589 lugx gaming

    https://templatemo.com/tm-589-lugx-gaming

    -->
</head>
<style>
    
</style>

<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>@Html.DisplayFor(model => model.name)</h3>
            </div>
        </div>
    </div>
</div>

<div class="single-product section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-image">
                    <img src="~/Images/@Html.DisplayFor(model => model.image_url)" alt="">
                </div>
            </div>
            <div class="col-lg-6 align-self-center">
                <h4>
                    @Html.DisplayFor(model => model.name)
                </h4>
                <span class="price">
                    @Html.DisplayFor(model => model.gia) vnd
                </span>
                <p>
                    @Html.DisplayFor(model => model.moTa)
                </p>
                <form id="qty" action="#">
                    
                    <button type="submit"><i class="fa fa-shopping-bag"></i>
                    @Html.ActionLink("Mua", "AddCart", "GAMEs", new { idgame = @Html.DisplayFor(model => model.idGame), gia = @Html.DisplayFor(model => model.gia) }, new { @class = "a" })
</button>
                </form>
                <ul>
                    <li><span>Game ID:</span> @Html.DisplayFor(model => model.idGame)</li>
                    <li><span>Genre:</span> <a href="#">@Html.DisplayFor(model => model.THELOAI.tenTheLoai)</a>
                    <li><span>Publish:</span> <a href="#">@Html.DisplayFor(model => model.ngayTao)</a>

                    <li><span>Developer:</span> <a href="#">@Html.DisplayFor(model => model.USER.FuName)</a>

                </ul>
            </div>
            <div class="col-lg-12">
                <div class="sep"></div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.idGame }) |
    @Html.ActionLink("Back to List", "Index")
</p>
<script src="~/vendor/jquery/jquery.min.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/assets/js/isotope.min.js"></script>
<script src="~/assets/js/owl-carousel.js"></script>
<script src="~/assets/js/counter.js"></script>
<script src="~/assets/js/custom.js"></script>